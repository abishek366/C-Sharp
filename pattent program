pattent program




using System;
using System.Runtime.Remoting.Services;

namespace ConsoleApp1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int num;
            Console.Write("Enter the number:");
            num = int.Parse(Console.ReadLine());
            int i = 1;
            while(i <= num)
            {
                int j = 1;
                while (j <= i)
                {
                    Console.Write("*");
                    j++;
                }
                Console.WriteLine();
                i++;
            }
        }
    }
}
